<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_display"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sandwich_picture_content_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Name:"
            android:textStyle="bold"
            android:textColor="#363030"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7a6c6c"
        android:paddingLeft="100dp"
        android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#363030"
            android:text="AlsoKnownAs:"
            android:paddingLeft="8dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

    <TextView
        android:id="@+id/know_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7a6c6c"
        android:paddingLeft="100dp"
        android:textSize="20sp"/>

        <TextView
            android:id="@+id/OrginPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlaceOfOrgin :"
            android:textStyle="bold"
            android:textColor="#363030"
            android:textSize="20sp"
            android:paddingLeft="8dp"/>


        <TextView
            android:id="@+id/origin_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7a6c6c"
            android:paddingLeft="100dp"
            android:textSize="20sp"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drscription :"
            android:textSize="20sp"
            android:textColor="#363030"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/description_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7a6c6c"
            android:paddingLeft="100dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients :"
            android:textColor="#363030"
            android:paddingLeft="8dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingre_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7a6c6c"
            android:paddingLeft="100dp"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>